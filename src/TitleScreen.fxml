<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="TitleScreenController"
      alignment="CENTER" spacing="20"
      prefWidth="600.0" prefHeight="400.0"
      style="-fx-background-color: #f4f7fa;">
   <children>
      <Text text="Typing Game"
            style="-fx-fill: #2c3e50; -fx-font-size: 36px; -fx-font-weight: bold;">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <Button fx:id="startGameButton"
              text="Start Game"
              onAction="#onStartGameButtonClicked"
              prefWidth="200.0"
              style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 8;" />
      <Button fx:id="viewScoreboardButton"
              text="View Scoreboard"
              onAction="#onViewScoreboardClicked"
              prefWidth="200.0"
              style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-background-radius: 8;" />
   </children>
</VBox>
